<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="uniquindio.Controller.GestionarRepartidoresAdminController">

    <!-- TOP: Título -->
    <top>
        <Label text="Gestión de Repartidores" style="-fx-font-size: 24px; -fx-font-weight: bold;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </Label>
    </top>

    <!-- CENTER: Tabla de repartidores -->
    <center>
        <TableView fx:id="tableRepartidores" prefHeight="400" prefWidth="800">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
                <TableColumn fx:id="colNombre" text="Nombre Completo" prefWidth="200"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
                <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="120"/>
                <TableColumn fx:id="colTipoDocumento" text="Tipo Documento" prefWidth="120"/>
                <TableColumn fx:id="colNumeroDocumento" text="Número Documento" prefWidth="150"/>
                <TableColumn fx:id="colZonaCobertura" text="Zona Cobertura" prefWidth="150"/>
                <TableColumn fx:id="colEstado" text="Activo" prefWidth="80"/>
            </columns>
        </TableView>
    </center>

    <!-- BOTTOM: Formulario y botones -->
    <bottom>
        <VBox spacing="10">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT"/>
                    <ColumnConstraints prefWidth="200"/>
                </columnConstraints>

                <!-- Nombre -->
                <Label text="Nombre Completo:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <!-- Email -->
                <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtEmail" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <!-- Teléfono -->
                <Label text="Teléfono:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtTelefono" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <!-- Tipo documento -->
                <Label text="Tipo Documento:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <ChoiceBox fx:id="choiceTipoDocumento" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <!-- Número documento -->
                <Label text="Número Documento:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNumeroDocumento" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <!-- Zona Cobertura -->
                <Label text="Zona Cobertura:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <TextField fx:id="txtZonaCobertura" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                <!-- Estado -->
                <Label text="Activo:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <CheckBox fx:id="chkEstado" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="btnCrear" text="Crear" prefWidth="100"/>
                <Button fx:id="btnActualizar" text="Actualizar" prefWidth="100"/>
                <Button fx:id="btnEliminar" text="Eliminar" prefWidth="100"/>
                <Button fx:id="btnLimpiar" text="Limpiar" prefWidth="100"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
