<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="uniquindio.Controller.ClienteController">

    <!-- Tabla de Clientes -->
    <center>
        <TableView fx:id="tablaClientes" prefHeight="250" prefWidth="600">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                <TableColumn fx:id="colNombre" text="Nombre" prefWidth="150"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="150"/>
                <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="100"/>
                <TableColumn fx:id="colTipoDoc" text="Tipo Doc" prefWidth="75"/>
                <TableColumn fx:id="colNumDoc" text="Número Doc" prefWidth="100"/>
                <TableColumn fx:id="colEstado" text="Estado" prefWidth="75"/>
                <TableColumn fx:id="colMetodoPago" text="Método Pago" prefWidth="100"/>
            </columns>
        </TableView>
    </center>

    <!-- Formulario -->
    <bottom>
        <VBox spacing="10" padding="10">
            <GridPane hgap="10" vgap="10">
                <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtId" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Nombre:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNombre" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtEmail" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Teléfono:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="txtTelefono" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Tipo Doc:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="txtTipoDoc" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Número Doc:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNumDoc" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                <Label text="Estado:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <TextField fx:id="txtEstado" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                <Label text="Método Pago:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                <TextField fx:id="txtMetodoPago" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10">
                <Button text="Crear" fx:id="btnCrear"/>
                <Button text="Actualizar" fx:id="btnActualizar"/>
                <Button text="Eliminar" fx:id="btnEliminar"/>
                <Button text="Limpiar" fx:id="btnLimpiar"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
